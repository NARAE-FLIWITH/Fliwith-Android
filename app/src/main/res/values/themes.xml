<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fliwith" parent="Theme.Material3.Light.NoActionBar">
        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
        <!-- 상태바 색상 변경 -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="Theme.Fliwith.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lavender</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/splash_icon_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Fliwith</item>
    </style>

</resources>