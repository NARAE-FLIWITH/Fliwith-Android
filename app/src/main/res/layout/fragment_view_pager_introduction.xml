    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/pretendard_semibold"
            android:text="개요"
            android:textSize="28sp" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/view_pager_introduction_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/introduction_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="부산광역시 주소주소"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/introduction_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="010-0000-0000"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/introduction_addition1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="매일 09:00 - 20:00"
                android:textFontWeight="500"
                android:textColor="@color/lightBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/introduction_addition2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="예약 시 이용 가능"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/introduction_addition3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="www.bluelinepark.com"
                android:textFontWeight="500"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>


