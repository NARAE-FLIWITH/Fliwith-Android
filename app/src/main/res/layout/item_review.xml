<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/image_radius_bottom"
        >

        <!-- review image -->
        <ImageView
            android:background="@drawable/image_radius_top"
            android:id="@+id/review_default_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/review_default_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- profile image -->
                <ImageView
                    android:id="@+id/review_profile_image"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/profile_image" />

                <!-- user name -->
                <TextView
                    android:id="@+id/review_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:font="@font/pretendard_medium"
                    android:fontWeight="500"
                    android:text="우유"
                    android:textSize="12dp"
                    android:textStyle="normal" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- heart image -->
                <ImageView
                    android:id="@+id/review_heart_image"
                    android:layout_width="14dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/heart_icon" />

                <!-- heart count -->
                <TextView
                    android:id="@+id/review_heart_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:font="@font/pretendard_medium"
                    android:fontWeight="500"
                    android:text="11"
                    android:textColor="@color/heartSolid"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>